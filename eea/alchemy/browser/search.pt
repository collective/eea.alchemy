<div class="alchemy-search">
  <form action="@@alchemy.results" method="post">
    <fieldset class="alchemy-box">
      <legend i18n:translate="">Portal types</legend>
      <div class="alchemy-box-content">
      <ul>
        <tal:types repeat="term python:view.portal_types">
        <li>
          <input type="checkbox" tal:attributes="
            name string:portal_type;
            id python:term.value;
            title python:term.title;
            value python:term.value" />
          <label tal:attributes="
            for python:term.value;
            title python:term.title"
            tal:content="python:term.title" />
        </li>
        </tal:types>
      </ul>
      </div>
    </fieldset>

    <fieldset class="alchemy-box">
      <legend i18n:translate="">Look in</legend>
      <div class="alchemy-box-content">
        <ul>
          <tal:schema repeat="term python:view.atschema">
          <li>
            <input type="checkbox" checked="checked" tal:attributes="
              name string:lookin;
              id python:term.value;
              title python:term.title;
              value python:term.value" />
            <label tal:attributes="
              for python:term.value;
              title python:term.title"
              tal:content="python:term.title" />
          </li>
          </tal:schema>
        </ul>
      </div>
    </fieldset>

    <fieldset class="alchemy-box">
      <legend i18n:translate="">Discover</legend>
      <div class="alchemy-box-content">
        <ul>
          <tal:schema repeat="term python:view.discover">
          <li>
            <input type="checkbox" checked="checked" tal:attributes="
              name string:discover;
              id python:term.value;
              title python:term.title;
              value python:term.value" />
            <label tal:attributes="
              for python:term.value;
              title python:term.title"
              tal:content="python:term.title" />
          </li>
          </tal:schema>
        </ul>
      </div>
    </fieldset>

    <div style="clear: both"> </div>
    <div class="alchemy-button">
      <input type="submit" value="Search" i18n:attributes="value" />
    </div>
  </form>
</div>
